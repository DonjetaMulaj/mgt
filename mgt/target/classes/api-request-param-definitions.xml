<?xml version="1.0" encoding="UTF-8"?>
<actions xmlns="http://www.asseco-see.com.tr/schema-action-rules"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.asseco-see.com.tr/schema-action-rules xsd/schema-action-rules.xsd">
	<!-- Parameter definitions for API Actions. Order of parameters should be:
		required, conditional, optional. Make sure you XML validate this file before
		committing any changes -->

	<action name="api-request-param-definitions.xml">
		<params>
			<param name="ACTION" required="required" type="enum" enumClass="goprime.fictive.api.enums.ApiAction" maxLength="128" />
			<param name="EMAIL" required="conditional" type="string" maxLength="64" ifParamNotPresent="USERNAME"/>
			<param name="USERNAME" required="required" type="string"  maxLength="64" ifParamNotPresent="EMAIL"/>
			<param name="PASSWORD" required="required"  type="string" maxLength="64" />
		</params>
	</action>
	<action name="APIADDPROJECT">
		<param name="ACTION" required="required" type="enum" enumClass="goprime.fictive.api.enums.ApiAction" maxLength="128" />
		<param name="EMAIL" required="conditional" type="string" maxLength="64" ifParamNotPresent="USERNAME"/>
		<param name="USERNAME" required="required" type="string"  maxLength="64" ifParamNotPresent="EMAIL"/>
		<param name="PASSWORD" required="required"  type="string" maxLength="64" />
		<param name="PROJECTTYPE" required="required"  type="enum" enumClass="goprime.fictive.domain.enums.ProjectType"  maxLength="64" />
		<param name="CUSTOMERSATISFACTION" required="conditional" type="string" maxLength="256" ifParamValue="PROJECTTYPE=MARKETING"/>
		<param name="STOCK" required="conditional" type="enum" enumClass="goprime.fictive.domain.enums.Stock" maxLength="256" ifParamValue="PROJECTTYPE=MARKETING"/>
		<param name="SALES" required="conditional" type="string" maxLength="1024" ifParamValue="PROJECTTYPE=MARKETING"/>
		<param name="PROMOTIONS" required="conditional"  type="enum" enumClass="goprime.fictive.domain.enums.ProjectType" ifParamValue="PROJECTTYPE=RETAIL" maxLength="64" />	
	</action>
	
	<action name="APIADDPROJECTDATA">
		<param name="ACTION" required="required" type="enum" enumClass="goprime.fictive.api.enums.ApiAction" maxLength="128" />
		<param name="EMAIL" required="conditional" type="string" maxLength="64" ifParamNotPresent="USERNAME"/>
		<param name="USERNAME" required="required" type="string"  maxLength="64" ifParamNotPresent="EMAIL"/>
		<param name="PASSWORD" required="required"  type="string" maxLength="64" />
		<param name="PROJECTID" required="required" type="string" maxLength="64" />
		<param name="TASK" required="optional" type="string" maxLength="1024"/>
		<param name="NOTES" required="optional" type="string" maxLength="1024"/>
	</action>
	
	</actions>